alias vim="stty stop '' -ixoff ; vim"
alias k="kubectl $KUBECTL_PARAMS"
alias kcontext="kubectl config use-context"

alias kg="k get"
alias kgall='kubectl get --all-namespaces all'
alias kd='k describe'

alias kgp='k get pod'
alias kgs='k get service'
alias kgi='k get ingress'
alias kgd='k get deployments'


alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

## space: gets space left on disk
alias space="df -h"

## a quick refresh for your shell instance.
alias zreload="source ~/.zshrc"
alias breload="source ~/.bashrc"

alias g="grep -i"
